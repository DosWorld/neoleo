#!/usr/bin/env bash

# mcarter 22-Dec-2016 my own configuration experiments.
# Everyone else should ignore this file

if [ ! -f configure ]; then
	autoreconf -iv
fi

DBG=--with-debug
#GPROF=--with-gprof

# ADDRESS SANITIZER
# the no-pie fixes some Linux/ASAN incompatabilities
# on Linux as at 23-Aug-2017
if true; then
SANXX="-no-pie"
SAN=--with-asan
fi

OPTS="$DBG $GPROF $SAN "

#./configure $GPROF $SAN "CXXFLAGS=  -O0 -g" --prefix=$HOME/.local
./configure $OPTS "CXXFLAGS= $SANXX" --prefix=$HOME/.local



